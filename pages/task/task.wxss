.topCalendar {
}

.topCalendar .buttonBox {
  display: flex;
  flex-direction: row;
}

.topCalendar .buttonBox .dateText {
  display: flex;
  align-items: center;
  justify-content: center;
  color: darkgray;
  width: 50%;
}

.topCalendar .buttonBox .hiddenButton {
  color: #fff;
  background-color: crimson;
  width: 50%;
  font-size: small;
  /* border: 5rpx solid #f5f5f5; */
}

.dateSelect {
  display: flex;
  flex-direction: row;
}

.dateSelect .beginDate {
  width: 50%;
  font-size: small;
  border-bottom-style: solid;
  border-bottom-color: forestgreen;
}

.dateSelect .endDate {
  width: 50%;
  font-size: small;
  border-bottom-style: solid;
  border-bottom-color: lightcoral;
}

.input {
  border: 2rpx solid #ccc;
  padding: 14rpx 20rpx;
  border-radius: 6rpx;
  margin-top: 30rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.input_active {
  outline: 0;
  box-shadow: 0px 0px 10px 0px lightcoral;

  border: 2rpx solid lightcoral;
  padding: 14rpx 20rpx;
  border-radius: 6rpx;
  margin-top: 30rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
}


.dialog_mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0);
  display: none;
}

.dialog_container {
  position: fixed;
  bottom: 400rpx;
  width: 750rpx;
  height: 350rpx;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 2;
  border-radius: 20rpx;
  box-shadow: 0px 3px 3px 2px gainsboro;
}

.dialog_show .dialog_container {
  transform: translateY(0);
}

.dialog_show .dialog_mask {
  display: block;
}
