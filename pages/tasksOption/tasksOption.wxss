/* pages/tasksOption/tasksOption.wxss */
.easyTabBar{
  display: flex;
  flex-direction: row;
  width: 750rpx;
  text-align: center;
  font-size: large;
}

.easyTabBar .wrap{
  width: 250rpx;
  border-bottom: solid burlywood;
}

.easyTabBar .wrap.select{
  background-color: burlywood;
}

.buttonBox{
  width: 100%;
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: row;
}

.buttonBox .firstButton{
  font-size: small;
  width: 50%;
  background-color: coral;
}

.buttonBox .secondButton{
  font-size: small;
  width: 50%;
  background-color: cornflowerblue;
}

.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0);
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 650rpx;
  height: 350rpx;
  margin-left: 50rpx;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
  box-shadow: 0px 3px 3px 2px gainsboro;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}
